{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ 
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": 
        [ 
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source":"*/Build/unity.framework.js",
        "headers":
        [
          {
            "key":"Content-Encoding",
            "value":"gzip"
          }
        ]
      },
      {
        "source":"*/Build/unity.wasm",
        "headers":
        [
          {
            "key":"Content-Encoding",
            "value":"gzip"
          }
        ]
      }
    ]
  }
}
